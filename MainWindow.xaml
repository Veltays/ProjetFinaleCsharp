<Window x:Class="ProjetFinale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Tracker" Height="720" Width="1280" Background="#303030">
    <Window.Resources>
        <FontFamily x:Key="KameronRegular">pack://application:,,,/Fonts/Kameron-Regular.ttf#Kameron</FontFamily>
        <FontFamily x:Key="KameronBold">pack://application:,,,/Fonts/Kameron-Bold.ttf#Kameron</FontFamily>
        <FontFamily x:Key="KameronMedium">pack://application:,,,/Fonts/Kameron-Medium.ttf#Kameron</FontFamily>
        <FontFamily x:Key="KameronSemiBold">pack://application:,,,/Fonts/Kameron-SemiBold.ttf#Kameron</FontFamily>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#303030" />
            <Setter Property="FontFamily" Value="{StaticResource KameronBold}" />
            <Setter Property="FontSize" Value="23" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D9A87A" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    
    
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>





        <!-- ASIDE -->
        <StackPanel Background="#AF66FF" Grid.Column="0" Margin="10" VerticalAlignment="Stretch">
            <StackPanel Margin="0,0" HorizontalAlignment="Center">
                <Image Source="./img/Logo.png" Width="228" Height="100" Stretch="Uniform"  />
            </StackPanel>


            <!-- Navigation Buttons -->
            <StackPanel Margin="0,30,0,0" >
                <Button Content="ACCOUNT"   Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="SCHEDULE"  Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="TASK"      Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="EXERCICES" Style="{StaticResource SidebarButtonStyle}" />
            </StackPanel>

            <!-- Spacer -->
            <StackPanel VerticalAlignment="Bottom" Margin="0,60,0,0">
                <Button Content="SETTINGS"  Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="EXPORTS"   Style="{StaticResource SidebarButtonStyle}" />
            </StackPanel>
        </StackPanel>




        
        


        <!-- Main Content -->
        <StackPanel Grid.Column="1" Margin="20" >
            <!-- Header with user info and goal -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>



                <!-- User Info -->
                <Border Background="#2A2A2A" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                    </Border.Effect>

                    <StackPanel Orientation="Horizontal" >
                        <Ellipse Width="60" Height="60" Fill="White" Margin="0,0,20,0"/>
                        <StackPanel>
                            <TextBlock Text="Pseudo" Foreground="White"  FontSize="18"/>
                            <TextBlock Text="INSCRIT LE 19/06/2025" Foreground="White" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Grid Margin="0,0,0,0" HorizontalAlignment="Right" Width="355">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="0 KG" Grid.Row="0" Foreground="#D393FF" Background="#2E2E2E" Padding="10,2" Margin="5" HorizontalAlignment="Stretch" TextAlignment="RIGHT"/>
                            <TextBlock Text="0 IMC" Grid.Row="1" Foreground="#D393FF" Background="#2E2E2E" Padding="10,2" Margin="5" HorizontalAlignment="Stretch" TextAlignment="RIGHT"/>
                            <TextBlock Text="0 CM" Grid.Row="2" Foreground="#D393FF" Background="#2E2E2E" Padding="10,2" Margin="5" HorizontalAlignment="Stretch" TextAlignment="RIGHT"/>
                            <TextBlock Text="0 ANS" Grid.Row="3" Foreground="#D393FF" Background="#2E2E2E" Padding="10,2" Margin="5" HorizontalAlignment="Stretch" TextAlignment="RIGHT"/>
                        </Grid>
                    </StackPanel>
                </Border>

                
                
                
                
                <!-- Objectif -->
                <Border Background="#B974FF" CornerRadius="10" Grid.Column="1" Padding="20" >
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="3" Opacity="0.25"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="OBJECTIF 2026" Foreground="White"  FontSize="16" FontFamily="{StaticResource KameronBold}"/>

                        <!-- Poids visé -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <TextBlock Text="POIDS VISÉ :" Foreground="White"  FontFamily="{StaticResource KameronBold}" VerticalAlignment="Center"/>
                            <Border Background="#2E2E2E" CornerRadius="5" Margin="10,0,0,0" Padding="5,2" Width="70">
                                <StackPanel Orientation="Horizontal" Width="59">
                                    <TextBlock Text="0" Foreground="White"  FontFamily="{StaticResource KameronBold}"/>
                                    <TextBlock Text=" KG" Foreground="White"  Margin="20,0,0,0" FontFamily="{StaticResource KameronBold}" RenderTransformOrigin="1.385,0.518"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- IMC visé -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <TextBlock Text="IMC VISÉ :" Foreground="White"  FontFamily="{StaticResource KameronBold}" VerticalAlignment="Center"/>
                            <Border Background="#2E2E2E" CornerRadius="5" Margin="10,0,0,0" Padding="5,2" Width="70">
                                <StackPanel Orientation="Horizontal" Width="59">
                                    <TextBlock Text="0" Foreground="White"  FontFamily="{StaticResource KameronBold}"/>
                                    <TextBlock Text=" IMC" Foreground="White"  Margin="20,0,0,0" FontFamily="{StaticResource KameronBold}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Pour -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <TextBlock Text="POUR :" Foreground="White"  FontFamily="{StaticResource KameronBold}" VerticalAlignment="Center"/>
                            <Border Background="#2E2E2E" CornerRadius="5" Margin="10,0,0,0" Padding="5,2" Width="70">
                                <StackPanel Orientation="Horizontal" Width="59">
                                    <TextBlock Text="0" Foreground="White"  FontFamily="{StaticResource KameronBold}"/>
                                    <TextBlock Text=" ANS" Foreground="White" Margin="20,0,0,0" FontFamily="{StaticResource KameronBold}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>





            
            
            

            <!-- Bottom Content (Charts Placeholder) -->
            <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,20">
                <!-- Bloc 1 -->
                <Border Background="#2A2A2A" CornerRadius="10" Padding="10" Margin="10" Height="200">
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="3" Opacity="0.25"/>
                    </Border.Effect>


                    <TextBlock Text="CALORIE TOTALE BRÛLÉES (KCAL)" FontSize="20" Foreground="White" FontFamily="{StaticResource KameronBold}"/>
                </Border>

                <!-- Bloc 2 -->
                <Border Background="#2A2A2A" CornerRadius="10" Padding="10" Margin="10" Height="200">
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="3" Opacity="0.25"/>
                    </Border.Effect>

                    <TextBlock Text="TÂCHES ACCOMPLIES" FontSize="20" Foreground="White" FontFamily="{StaticResource KameronBold}"/>
                </Border>

                <!-- Bloc 3 -->
                <Border Background="#2A2A2A" CornerRadius="10" Padding="10" Margin="10" Height="200">
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="3" Opacity="0.25"/>
                    </Border.Effect>
                    <TextBlock Text="NOMBRE TOTAL DE SÉANCES" FontSize="20" Foreground="White" FontFamily="{StaticResource KameronBold}"/>
                </Border>

                <!-- Bloc 4 -->
                <Border Background="#2A2A2A" CornerRadius="10" Padding="10" Margin="10" Height="200">
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="3" Opacity="0.25"/>
                    </Border.Effect>
                    <TextBlock Text="OBJECTIF ACCOMPLI (%)" FontSize="20" Foreground="White" FontFamily="{StaticResource KameronBold}"/>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
